				</p>
			</div>
		</div>
		

	</div>
</template>

<script>
	import my from '@/network/my/my.js';
	import filters from '@/lib/global.js';
	export default{
		data() {
			return {
				page:1,
				size:10,
				bookId:'',
				init:[],
			}
		},
		filters:{
			...filters.dateFilter,
			statusName(val){
				if(val==0){
					return '未处理'
				}
				if(val==1){
					return '申请成功'
				}
				if(val==2){
					return '未通过'
				}
			},
			colorFn(val){
				if(val==0){
					return 'status-ing'
				}
				if(val==1){
					return 'status-yes'
				}
				if(val==2){
					return 'status-no'
				}
			}
		},
		mounted() {
			this.getInit();
		},
		computed:{
			colorFn(){
				
			}
		},
		methods: {
			back() {
				this.$router.go(-1);
			},
			getInit (){
				let id = this.$route.params.id
				my.readVerifySee(id).then(res=>{
					console.log('详情',res);
					if(res.data.code==0){
						this.init=res.data.data
					}
					
				})
			},
			
			
			
			
		}

	}
</script>

