						<img src="/static/images/tab-icon-ym.png" alt="" @click="showAll">
					</div>
				</div>
				<div style="height: 250px;">
					<cube-scroll ref="scroll2">
				  	<ul class="foot-content">
				  		<li v-for="(sheet,index) in list" 
				  			:class="{sheetY:sheet.isright=='Y'}" 
				  			@click="scollTo(index)"
				  			:key='index'>
				  			{{index+1}}
				  		</li>
				  	</ul>
		  		</cube-scroll>
