<template>
	<div class="user-shenqing">
		<header class="header">
			<div @click="back()"><img src="/static/images/nav-forget-icon-goback.png" alt="" /></div>
			<h1>我的申请</h1>
			<em @click="explain()">申请挑战</em>
		</header>
		<div class="my-content">
			<div  class='my-scroll'>
				<cube-scroll
				ref="scroll"
				@pulling-down="onPullingDown"
	   			@pulling-up="onPullingUp"
				:options="ScrollOptions">
					<ul class="ul-shenqing" v-if='list.length>0'>
						<li v-for='(item,index) in list'>
							<img :src="item.bookUrl"/>
							<div>
								<h3 class="ellipsis">
									{{item.bookName}}
								</h3>
								<h4>
									申请状态 : <span :class="item.verifyStatus | colorFn">{{item.verifyStatus | statusName}}</span>
								</h4>
								<h5>
									申请时间 : {{item.insertTime | ymdHm}}
								</h5>
							</div>
							
							<span @click="goInfo(item.id)">查看</span>
						</li>
					</ul>
				</cube-scroll>
			</div>		
			<div class="no-data" v-if='nodata'>
				<img src="/static/images/shenqno.png"/>
			</div>
		</div>
		

	</div>
</template>

<script>
	import my from '@/network/my/my.js';
	
	import filters from '@/lib/global.js';
	export default{
		data() {
			return {
				page:1,
				size:10,
				bookId:'',
				list:[],
				nodata:false,
				isMust:'',
			}
		},
		filters:{
			...filters.dateFilter,
			statusName(val){
				if(val==0){
					return '未处理'
				}
				if(val==1){
					return '申请成功'
				}
				if(val==2){
					return '未通过'
				}
			},
			colorFn(val){
				if(val==0){
					return 'status-ing'
				}
				if(val==1){
					return 'status-yes'
				}
				if(val==2){
					return 'status-no'
				}
			}
		},
		mounted() {
			this.getInit();
			this.getAuth();
		},
		computed: {
		   	ScrollOptions() {
		      	return {
		      		pullDownRefresh: this.pullDownRefreshObj,
				    pullUpLoad: this.pullUpLoadObj,
				    scrollbar: true
//		        	scrollbar: this.scrollbarObj,
//		       		startY: this.startY
		      	}
		    },
		    scrollbarObj: function() {
		      	return this.scrollbar ? { fade: this.scrollbarFade } : false
		    }
		 
		},
		methods: {
			onPullingDown() {
	
				console.log('下下')
			},
			onPullingUp() {

				console.log('上上')
			},
			back() {
				this.$router.go(-1);
			},
			explain(){
				if(this.isMust==0){
					this.$createMyConfirm({
							type: 'confirm',
							title: '非常遗憾',
							content: '你的必读和选读书籍暂未全部通关完成,不能申请挑战',
							 styleObj: {
							 	'background-image': "url('/static/images/pop-bqts-bg.png')"
							 },
							cancelBtn: {
								text: '返回',
								style: {
									background: '#0293FE', 
									color: 'white',
									border: 'none',
									float:'left',
									marginLeft:'20px',
									marginRight:'20px',
									width:'85%'
								
								}
							},
							confirmBtn: {
								
								style: {
									display:'none'
								}
							},
							
							onCancel: (e)=> {
		//						this.handIn();
		//						this.$router.go(-1);
							}
					}).show();
				}else{
					this.goAdd();
				}
			},
			getAuth(){
				let gradeId = {
					gradeId:this.global.session.get('user').gradeId
				} 
				my.isMustAll(gradeId).then(res => {
					console.log('判断',res)
					if(res.data.code==0){
						this.isMust = res.data.data;
					}
          		})
			},
			getInit (){
				 let params ={
				 	verifyType:2,//阅读挑战
					stuId: this.global.session.get('user').id,
					current: this.page,
					size: this.size
				}
				my.readVerify(params).then(res=>{
					console.log('我的申请',res);
					if(res.data.code==0){
						this.list=res.data.data.records;
						if(res.data.data.records.length==0){
							this.nodata=true;
						}
					}
					
				})
			},
//			goInfo(type,id){
//				if(type!=0){
//					this.$router.push({
//						path:'/userShenqingSee/'+id
//					})
//				}
//				
//			},
			goInfo(id){
				this.$router.push({
					path:'/userShenqingSee/'+id
				})
			},
			goAdd(){
				this.$router.push({
					path:'/userShenqingAdd/'
				})
			}
			
			
			
		}

	}
</script>

