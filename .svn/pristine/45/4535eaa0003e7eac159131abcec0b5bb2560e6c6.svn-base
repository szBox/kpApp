<script>
	import my from '@/network/my/my.js'
	export default{
		data() {
			return {
				init:[],
			}
		},
		
		mounted() {
//			this.getUser();
			this.getInit();
		},
		methods: {
			back () {
				this.$router.go(-1);
			},
			getInit (){
				let id = this.global.session.get('user').id;
				my.get(id).then(res=>{
					console.log('用户信息',res);
					if(res.data.code==0){
						this.init=res.data.data
					}
					
				})
			},
			goUser () {
				this.$router.push({
					path:'/userInfo'
				})
			},
			goError (){
				this.$router.push({
					path:'/userError'
				})
			},
			goShoucang(){
				this.$router.push({
					path:'/userShoucang'
				})
			},
			goShenqing(){
				this.$router.push({
					path:'/userShenqing'
				})
			},
			goSetting(){
				this.$router.push({
					path:'/userSetting'
				})
			},
			homeShenqing(id,name){
				this.$router.push({
					path:'/home-shenqing',
					query:{
						id:id,
						name:name
					}
				})
			}
		}	
	}
</script>

